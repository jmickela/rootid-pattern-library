<div class="container">
  <section class="cardgrid row">
    {% for item in items %}
      <div class="cardgrid__item col--12 col-md-6 col-lg-4">
        {% include "20-molecules/50-cards/10-card1/00-card1.twig" with {
          'card_subtitle': item.title,
          'card_content': item.content,
          'card_media': item.media
        } only %}
      </div>
    {% endfor %}
  </section>

  {% if pagination %}
    <div class="row">
      <div class="cardgrid__pager col--12">
        {% include "20-molecules/20-navigation/50-pagination/00-pagination.twig" with {
          pagination: pagination
        } only %}
      </div>
    </div>
  {% endif %}
</div>