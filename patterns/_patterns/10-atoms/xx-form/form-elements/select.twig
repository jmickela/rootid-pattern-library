<fieldset>
  <legend>Selects</legend>
  <div class="input input--select">
    <label for='select-item'>A Select List</label>
    <select name='select-item'>
      {% for _ in range(1, 5) %}
        <option>Option {{ loop.index }}</option>
      {% endfor %}
    </select>
  </div>

  <div class="input input--select">
    <label for='select-item'>A Select List with opt groups</label>
    <select name='select-item'>
      {% for _ in range(1, 5) %}
      <option>Option {{ loop.index }}</option>
      {% endfor %}

      <optgroup label="Option Group 1">
        {% for _ in range(1, 5) %}
        <option>Option {{ loop.index }}</option>
        {% endfor %}
      </optgroup>

      <optgroup label="Option Group 2">
        {% for _ in range(1, 5) %}
        <option>Option {{ loop.index }}</option>
        {% endfor %}
      </optgroup>

    </select>
  </div>

</fieldset>
