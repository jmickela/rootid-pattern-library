{# 

Required Data:
menu-items - array of menu item objects
  item.link - the menu item link
  item.title - the menu item text

Options:
  
  menu_modifiers - array of additional classes to append to navmenu--

 

#}  
  
  {% set mods = '' %}
  {% for mod in menu_modifiers %}
    {% set mods = mods ~ " navmenu--" ~ mod %}
  {% endfor %}
<nav class='navmenu navmenu-default navmenu-fixed-left navmenu-offcanvas{{ mods }}'>
  <div class="offcanvas-header">
    <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".navmenu" data-canvas="body"><i class="fa fa-times"></i> Close</button>
  </div>
  <ul class='nav navbar-nav'>
    {% for item in menu_items %}
      <li class='menu-item'>
        <a  class='menu-item-link' href='{{item.link}}'>{{item.title}}</a>
      </li>
    {% endfor %}
    {% block menu_extra_content %}{% endblock %}
  </ul>
</nav>