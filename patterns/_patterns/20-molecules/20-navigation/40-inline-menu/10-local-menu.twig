<nav class='localmenu' role='navigation'>
  <ul class='localmenu__menu'>
    {% for item in menu_items %}
      {% if svg_divider == true %}
        {% if loop.index > 1 %}
          <svg class = 'localmenu__divider'>
            <line x1="50%" x2="50%" y1="0" y2="100%"/>
          </svg>
        {% endif %}
      {% endif %}
      <li class='localmenu__menu__item'>
        <a href='{{item.link}}'>{{item.title}}</a>
        {% if item.children %}
          <ul class='localmenu__menu__submenu'>
            {% for child in item.children %}
              <li class='{{ child.active ? 'active' : '' }}' >
                <a href='{{ child.link }}'>{{ child.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>