{#

Required Data:


Options:
  card_href: Image, title, and button will link to this.


  attributes: array of attribute titles and values

  Pre-defined options:

  transparent, red

#}

{% set card_heading_level = card_heading_level ? card_heading_level : 4 %}
{% set mods = '' %}
{% for mod in card_modifiers %}
  {% set mods = mods ~ " card1--" ~ mod %}
{% endfor %}

{% if not_article %}
  <div class="card1 {{ mods }}">
{% else %}
  <article class="card1 {{ mods }}">
{% endif %}

  {% if card_media %}
    <div class="card1__media">
      {{ card_media|raw }}
    </div>
  {% endif %}

  {% if card_labels %}
    <div class="card1__labels">
      {% for label in card_labels %}
        {% if label.link %}<a href="{{ label.link }}">{% endif %}
        {{ label.label }}
        {% if label.link %}</a>{% endif %}
      {% endfor %}
    </div>
  {% endif %}

  {% if card_subtitle %}
    <h{{ card_heading_level }} class="card1__subtitle">
      {% if card_href %}<a href="{{ card_href }}">{% endif %}
      {{ card_subtitle }}
      {% if card_href %}</a>{% endif %}
    </h{{ card_heading_level }}>
  {% endif %}

  {% if card_content %}
    <div class="card1__content">
      {{ card_content|raw }}
    </div>
  {% endif %}
  {% block card_extra_content %}{% endblock %}

  {% if button_content %}
    {% include "10-molecules/10-buttons/10-button.twig" with {
      button_href: card_href,
      button_content: button_content,
      button_modifiers: button_modifiers
    } %}
  {% endif %}

{% if not_article %}
  </div>
{% else %}
  </article>
{% endif %}